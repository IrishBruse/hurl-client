{
  "name": "hurl",
  "displayName": "Hurl",
  "description": "HURL language support",
  "author": "Ethan Conneely",
  "license": "MIT",
  "icon": "./assets/icon.png",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/IrishBruse/hurl"
  },
  "publisher": "irishbruse",
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "grammars": [
      {
        "language": "hurl",
        "scopeName": "source.hurl",
        "path": "./assets/syntax/hurl.tmLanguage.json",
        "embeddedLanguages": {
          "source.hurl embedded.json.hurl": "json",
          "source.hurl embedded.markdown.hurl": "markdown",
          "source.hurl embedded.xml.hurl": "xml"
        }
      }
    ],
    "languages": [
      {
        "id": "hurl",
        "aliases": [
          "Hurl",
          "hurl"
        ],
        "extensions": [
          ".hurl"
        ],
        "configuration": "./assets/syntax/language-configuration.json",
        "icon": {
          "dark": "assets/langIcon.png",
          "light": "assets/langIcon.png"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "vsce": "vsce",
    "prepublish": "vsce login irishbruse"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.24.0",
    "mocha": "^10.7.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "vscode-uri": "^3.0.8"
  }
}
